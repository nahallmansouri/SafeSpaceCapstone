<Window x:Class="SafeSpaceCapstone.View.TeacherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeSpaceCapstone.View"
        xmlns:vm="clr-namespace:SafeSpaceCapstone.ViewModel"
        mc:Ignorable="d"
        Title="TeacherView" Height="450" Width="800">
    <Window.Resources>
        <vm:StudentInfoViewModel x:Key="viewModel"/>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Import"
                          Background="Transparent">
                    <MenuItem Name="StudentNamesMenuItem" Header="Student Names" Click="StudentNamesMenuItem_Click" />
                    <MenuItem Name ="StudentDataMenuItem" Header="Student Data" Click="StudentDataMenuItem_Click"/>
                </MenuItem>
                <MenuItem Name="ExportMenuItem" Header="Export"/>
            </Menu>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Student Names File Path:"
                                   Grid.Column="0"
                                   Grid.Row="0"/>
                            <TextBlock x:Name="StudentNameFilePath" 
                                       Grid.Column="1"
                                       Grid.Row="0"
                                       VerticalAlignment="Center"
                                       Text= "{Binding Path= StudentNamesFilePath}"/>
                            <Label Content="Student Data File Path:"
                                   Grid.Column="0"
                                   Grid.Row="1"/>
                            <TextBlock x:Name="StudentDataFilePath" 
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Text= "{Binding Path= StudentDataFilePath}"/>

                        </Grid>
                    </StackPanel>
                    <Expander x:Name="MasterTable" Header="Master Table">
                        <ListView x:Name="MasterListView"
                                  Background="Transparent"
                                  TextElement.FontSize="10">
                            <ListView.Style>
                                <Style TargetType="ListView"/>
                            </ListView.Style>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="Auto" Header="Student Name"/>
                                    <GridViewColumn Width="Auto" Header="Serial Number"/>
                                    <GridViewColumn Width="Auto" Header="Number of Encounters"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
